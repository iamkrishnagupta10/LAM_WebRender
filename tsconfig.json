{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "outDir": "./build",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "importHelpers": true,
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve"
  },
  "include": [
    "./src/**/*",
    "./asset/**/*.json"
  ],
  "exclude": [
    "node_modules"
  ]
}